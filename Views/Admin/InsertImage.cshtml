@model IList<moon_album.Models.AlbumInfo>

@{

}


@using (Html.BeginForm("InsertImage", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
<div class="form-horizontal">
    <h2 class="label-info">批次新增照片</h2>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        <label class="control-label col-md-2">Category</label>
        <div class="col-md-10">
            @Url.RequestContext.RouteData.Values["category_id"]-@ViewBag.CategoryName
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2">Album</label>
        <div class="col-md-10">
            <select id="AlbumId" name="AlbumId" class="form-control">
                @foreach (var item in @Model)
                {
                    <option value="@item.Album_Id">@item.Album_Id-@item.Album_Name</option>
                }
            </select>
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2">檔名是否包含行列資訊</label>
        <div class="col-md-10">
            @Html.CheckBox("isFilenameIncludeRowColumn")
        </div>

    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Choose Photo</label>
        <div class="col-md-10">
            <input id="files" name="files" type="file" multiple="multiple">
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Image Upload" class="btn btn-default" />
        </div>
    </div>



    <div class="form-group">
        <label class="control-label col-md-2">訊息：</label>
        <div class="col-md-10">
            @ViewBag.Status
        </div>
    </div>
</div>
}
<div>
    @Html.ActionLink("Back to List", "../Home/Index")
</div>
