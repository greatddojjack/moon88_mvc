@model IList<moon_album.Models.AlbumInfo>

@{

}


@using (Html.BeginForm("InsertImage", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="form-horizontal">
        <h4>新增照片</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            <label class="control-label col-md-2">Album</label>
            <div class="col-md-10">
                <select id="AlbumId" name="AlbumId" class="form-control">
                    @foreach (var item in @Model)
                    {
                        <option value="@item.Album_Id">@item.Album_Id-@item.Album_Name</option>
                    }
                </select>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">PhotoName</label>
            <div class="col-md-10">
                @Html.TextBox("PhotoName", "", new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Row</label>
            <div class="col-md-4">
                @Html.TextBox("PhotoRow", "0", new { @class = "form-control", type = "number" })
            </div>
            <label class="control-label col-md-2">Column</label>
            <div class="col-md-4">
                @Html.TextBox("PhotoColumn", "0", new { @class = "form-control", type = "number" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Choose Photo</label>
            <div class="col-md-10">
                <input id="files" name="files" type="file" multiple="multiple">
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Image Upload" class="btn btn-default" />
            </div>
        </div>
     

     
        <div class="form-group">
            <label class="control-label col-md-2">訊息：</label>
            <div class="col-md-10">
                @ViewBag.Status
            </div>
        </div>
    </div>
}
<div>
    @Html.ActionLink("Back to List", "../Home/Index")
</div>
